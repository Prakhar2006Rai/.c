#include <stdio.h>
int main () {
    int a[4][4],i,j;
    printf("enter 16 elements : ");
    for(i=0;i<4;i++){
        for(j=0;j<4;j++)
        scanf("%d",&a[i][j]);
    }
        printf("\n column wise sum : \n");
        for(j=0;j<4;j++){
        int  csum = 0;
        for(i=0;i<4;i++)
        csum += a[i][j];
        printf("column %d sum = %d\n",j+1,csum);
    }
    return 0;
}
