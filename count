#include <stdio.h>

int main() {
    int rows, cols,i,j,evenno=0,oddno=0;
    printf("Enter number of rows: ");
    scanf("%d", &rows);
    printf("Enter number of columns: ");
    scanf("%d", &cols);
    int arr[rows][cols];
    printf("Enter elements of the %dx%d array:\n", rows, cols);
    for (i = 0; i < rows; i++) {
        for (j = 0; j < cols; j++) {
            scanf("%d", &arr[i][j]);
        }
    }
    for (i = 0; i < rows; i++) {
        for (j = 0; j < cols; j++) {
            if (arr[i][j] % 2 == 0)
                evenno++;
            else
                oddno++;
        }
    }
    printf("Total even numbers = %d\n", evenno);
    printf("Total odd numbers = %d\n", oddno);

    return 0;
}
